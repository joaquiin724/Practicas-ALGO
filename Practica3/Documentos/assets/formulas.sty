% Crea un nuevo contador para los ejercicios
\newcounter{ejercicioCounter}
\setcounter{ejercicioCounter}{0}

% Define un nuevo comando para ejercicios
\newcommand{\ejercicio}[3][]
{% Comandos para el ejercicio
\vspace{0.5cm}% Espacio vertical
  \ifx&#1&% Verifica si se proporcionó el primer argumento (número del ejercicio)
    \stepcounter{ejercicioCounter}% Incrementa el contador si no se proporcionó
    \def\temp{\theejercicioCounter}% Usa el contador
  \else
    \def\temp{#1}% Usa el número proporcionado
  \fi
  % Verifica si se proporcionó el segundo argumento (puntos)
  \ifx&#2&%
    \def\puntos{}% No se muestran puntos si no se proporcionaron
  \else
    \def\puntos{(#2 puntos)}% Muestra los puntos
  \fi
  \par\noindent\textbf{Ejercicio \temp\ \puntos:} \textit{#3}\par % Título en negrita y enunciado en cursiva
  \addcontentsline{toc}{subsection}{Ejercicio \temp\ \puntos} % Añade al índice
}

